@model Hero

<div class="container">
    <form method="post" asp-action="HeroCreated">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" asp-for="Name"/>
        </div>
        <button class="btn btn btn-primary" type="submit">Submit</button>
    </form>
</div>

@section Footer{
    <div class="mt-3 mb-3">
        @using (Html.BeginForm("MessageDeleted", "Hero"))
        {
            <h3 class="text-danger mt-2">Messages</h3>
            <button class="btn btn-primary" type="submit">Clear Messages</button>
            <ul>
                @foreach (string message in Repository.AllMessages)
                {
                    <li>@message</li>
                }
            </ul>
        }
    </div>
}