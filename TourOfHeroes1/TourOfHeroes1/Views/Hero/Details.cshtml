@model Hero
@{
    Hero hero = Model;
}




    <div class="mt-3 mb-3">
        <h3>HERO Details</h3>
        <label> ID: @hero.Id</label>
    </div>

    <div class="mt-3 mb-3">
        <label>Hero Name: @hero.Name</label>
        @* <input value="@hero.Name" name="heroName" /> *@
    </div>

@*     <button class="btn btn-primary" type="submit">save</button>

